<?xml version="1.0" encoding="UTF-8"?>
<ActivityInformation platformType="ECIM" jobType="BACKUP" xmlns="com:ericsson:oss:services:shm:job:activity"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="com:ericsson:oss:services:shm:job:activity activity_information.xsd ">	
	
	<NeActivityInformation neType="DEFAULT">
			<Activity name="createbackup" order="1" type="MOACTION"	mandatory="true">
				<ActivityParams>
					<param name="BACKUP_NAME" inputType="TEXT" pattern="^([a-zA-Z0-9_-\s]*([$]productnumber)*([$]productrevision)*([$]timestamp)*([$]nodename)*)+$" />
					<param name="GENERATE_BACKUP_NAME" inputType="MULTI-SELECTION" defaultValue="true"/>
					<nodeparam name="BACKUP_DOMAIN_TYPE" inputType="SINGLE-SELECTION" mandatory="true"/>																										
				</ActivityParams>
			</Activity>			
			<Activity name="uploadbackup" order="2" type="MOACTION" mandatory="false">	
			    <ActivityParams>
					<param name="UPLOAD_BACKUP_DETAILS" inputType="HIDDEN" defaultValue="$BACKUP_NAME/$BACKUP_DOMAIN_TYPE" />
				</ActivityParams>	
		  </Activity>		
	</NeActivityInformation>
	<NeActivityInformation neType="MSRBS_V1">
			<Activity name="createbackup" order="1" type="MOACTION"	mandatory="true">
				<ActivityParams>
					<param name="BACKUP_NAME" inputType="TEXT" pattern="^[a-zA-Z0-9_-]{1,}$" />
					<param name="GENERATE_BACKUP_NAME" inputType="MULTI-SELECTION" defaultValue="true"/>
					<nodeparam name="BACKUP_DOMAIN_TYPE" inputType="SINGLE-SELECTION" mandatory="true"/>																										
				</ActivityParams>
			</Activity>					
	</NeActivityInformation>
	
</ActivityInformation>

