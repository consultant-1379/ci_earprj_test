<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />
	<engine>
		<property name="deploymentExportPath">target/arquillian</property>
	</engine>

		<container qualifier="jboss_managed_local_ts" default="true">
			<configuration>
				<property name="jbossHome">${jbossHome}</property>
				<property name="startupTimeoutInSeconds">600</property>
				<property name="serverConfig">standalone-full.xml</property>
				<property name="managementPort">10099</property>
				<property name="javaVmArguments">-Xrunjdwp:transport=dt_socket,address=3024,server=y,suspend=n -Xmx768m -XX:MaxPermSize=256m -Djgroups.udp.mcast_port=16712 -Djgroups.tcp.port=48124 -Dericsson-model-service-root=${modelRoot} -DXML_REPO_PATH=${xmlRepo} -DxmlRepoPath=${xmlRepo}
				-Djboss.node.name=cppinventorysynchservice 
				-Dcom.ericsson.oss.sdk.node.identifier=cppinventorysynchservice
				-Djboss.tx.node.id=cppinventorysynchservice  -Dversant.connectionPoolSize=200 -Djboss.socket.binding.port-offset=100 -Dhost=${jbossHost} -Dport=${jbossPort} -Djava.net.preferIPv4Stack=true</property>
			</configuration>
		</container>
</arquillian>
  